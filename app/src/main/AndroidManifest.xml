<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tareq.healthcare">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity" />
        <!-- android:theme="@style/AppTheme.Dark" -->

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MessageActivity"
            android:icon="@drawable/call_mothers"
            android:label="মায়েদের মেসেজ দিন" />
        <activity android:name=".All_Mother_List_Activity" />
        <activity
            android:name=".ANC_PNC_List_Activity"
            android:icon="@drawable/call_mothers"
            android:label="মেসেজ দিন" />
        <activity
            android:name=".Nutrition_Messages_Activity"
            android:icon="@drawable/nutrition_action_bar" />
        <activity
            android:name=".MotherRegistrationActivity"
            android:icon="@drawable/new_mother2" />
        <activity
            android:name=".AddChildActivity"
            android:icon="@drawable/call_mothers" />
        <activity
            android:name=".Mother_Details_Activity"
            android:icon="@drawable/call_mothers" />
        <activity
            android:name=".EditMotherActivity"
            android:icon="@drawable/call_mothers" />
        <activity
            android:name=".Activity_Sync"
            android:icon="@drawable/basic_cloud" />
        <activity
            android:name=".ChildFollowUpActivity"
            android:icon="@drawable/call_mothers" />
        <activity android:name=".ActivityAdmin"></activity>
    </application>

</manifest>