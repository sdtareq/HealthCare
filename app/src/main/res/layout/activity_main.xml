<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tareq.healthcare.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"

        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="লগ-আউট করুন"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="45dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >


            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_message"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="8dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="#34A853"
                        android:paddingBottom="16dp"/>

                    <TextView
                        android:id="@+id/tvMessageTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="মায়েদের মেসেজ দিন"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:paddingTop="8dp"
                        />
                    <TextView
                        android:id="@+id/tvMessageRemain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="00 জনকে মেসেজ দেয়া হয়নি "
                        android:gravity="center"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvMessageDelivered"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="00 জনকে মেসেজ দেয়া হয়েছে "
                        android:gravity="center"
                        android:textSize="15sp"

                        />

                    <TextView
                        android:id="@+id/tvMessageTotal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="মোট সংখ্যা 00 জন"
                        android:gravity="center"
                        android:textSize="15sp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_All_Audio"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="16dp"
                 >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="#FBBC05"
                        android:paddingBottom="26dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="পুষ্টিকর খাবার সম্পর্কে জেনে নিন"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_mother_register"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="#EA4335"
                        />



                    <TextView
                        android:id="@+id/tvMOtherRegisterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="নতুন মা রেজিস্টার করুন"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="#4285F4"
                        android:paddingBottom="16dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="সকল মায়েদের লিস্ট"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>




            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:background="#55ACEE"
                        android:paddingBottom="16dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ডেটা সিঙ্ক করুন"
                        android:textSize="30sp"
                        android:gravity="center"
                        android:paddingTop="8dp"/>
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="সর্বশেষ সিঙ্ক করা হয়েছেঃ 24/10/2016"
                        android:textSize="23sp"
                        android:gravity="center"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>






    </LinearLayout>





</LinearLayout>


</ScrollView>